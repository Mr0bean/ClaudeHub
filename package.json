{
  "name": "claudelog-translate",
  "version": "1.0.0",
  "description": "ClaudeLog 中文翻译项目 - 通过智能化网页爬取、自动化翻译和 VuePress 网站生成，为中文用户提供 claudelog.com 的完整中文版本",
  "main": "index.js",
  "private": true,
  "scripts": {
    "scrape": "node scripts/scraper/final-scraper.js",
    "translate": "bash scripts/translation/translate-all.sh",
    "check-links": "python scripts/utils/check-links.py",
    "fix-formatting": "python scripts/utils/fix-formatting.py",
    "validate": "python scripts/validation/comprehensive-scanner.py",
    "cleanup": "python scripts/utils/cleanup.py",
    "dev": "cd final-site && npm run dev",
    "start": "cd final-site && npm run dev",
    "serve": "cd final-site && npm run dev",
    "build": "cd final-site && npm run build",
    "preview": "cd final-site && npm run preview",
    "setup": "npm install && cd final-site && npm install",
    "install-all": "npm install && cd final-site && npm install",
    "test": "npm run validate && npm run check-links",
    "format": "prettier --write \"**/*.{js,py,md}\"",
    "deploy": "npm run build && echo 'Built successfully! Push to GitHub to deploy.'",
    "help": "echo 'Available commands: start/dev/serve (development), build (production), setup (install), deploy (build & info)'"
  },
  "keywords": [
    "claude",
    "translation",
    "vuepress",
    "documentation",
    "chinese",
    "scraping",
    "automation"
  ],
  "author": "ClaudeLog Translation Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mr0bean/ClaudeHub.git"
  },
  "bugs": {
    "url": "https://github.com/Mr0bean/ClaudeHub/issues"
  },
  "homepage": "https://mr0bean.github.io/ClaudeHub/",
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "fs-extra": "^11.1.1",
    "puppeteer": "^21.5.0",
    "turndown": "^7.1.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "nodemon": "^3.0.0"
  },
  "workspaces": [
    "final-site"
  ]
}