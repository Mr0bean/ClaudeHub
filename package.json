  "dependencies": {
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "fs-extra": "^11.3.1",
    "glob": "^10.4.5",
    "image-size": "^2.0.2",
    "playwright": "^1.55.0",
    "puppeteer": "^24.20.0",
    "turndown": "^7.2.1"
  }
}
